module functionDemo

// Function creation
fn hello() {
    println("hello world")
}

// Calling a function
hello()

// Nova uses universal function call syntax. Any function can be called this way.
fn show(input: String) {
    input.println()
}

"wow".show()

// This makes it easy to chain
fn square(x:Int) -> Int {
    return x * x
}

5.square().square().println()